# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2

# Specific settings for Java files
[*.java]
indent_size = 2

# Specific settings for XML files (commonly used in Maven projects)
[*.xml]
indent_style = space
indent_size = 4